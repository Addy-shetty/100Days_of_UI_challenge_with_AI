    <script>
        /* --- 3D Parallax Effect Logic --- */
        const stage = document.getElementById('productStage');
        const shoeWrapper = document.getElementById('shoeWrapper');

        stage.addEventListener('mousemove', (e) => {
            const { offsetWidth: width, offsetHeight: height } = stage;
            const { offsetX: x, offsetY: y } = e;

            // Calculate rotation based on cursor position
            // Rotate Y (left/right) and Rotate X (up/down)
            // We divide by a factor to dampen the movement
            const rotateY = ((x / width) - 0.5) * 40; // -20 to 20 deg
            const rotateX = ((y / height) - 0.5) * -40; // -20 to 20 deg

            shoeWrapper.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
        });

        // Reset when mouse leaves
        stage.addEventListener('mouseleave', () => {
            shoeWrapper.style.transform = `rotateX(0deg) rotateY(0deg)`;
        });

        /* --- Payment Form Logic --- */
        
        // Credit Card Formatting
        const cardInput = document.getElementById('cardNum');
        cardInput.addEventListener('input', (e) => {
            let value = e.target.value.replace(/\D/g, ''); // Remove non-digits
            value = value.match(/.{1,4}/g)?.join(' ') || value; // Add space every 4 chars
            e.target.value = value;
        });

        // Form Submission Simulation
        const form = document.getElementById('checkoutForm');
        const overlay = document.getElementById('processingOverlay');

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            
            // Show overlay
            overlay.classList.add('active');

            // Simulate Network Request
            setTimeout(() => {
                document.querySelector('.loader-text').innerText = "ORDER CONFIRMED // DISPATCHING DRONE";
                document.querySelector('.loader-text').style.color = "var(--neon-cyan)";
            }, 2000);

            setTimeout(() => {
                alert("Transaction Complete. Welcome to the future.");
                location.reload();
            }, 3500);
        });

        // Glitch effect on text hover
        const glitchText = document.querySelector('.glitch-text');
        glitchText.addEventListener('mouseover', () => {
            let iterations = 0;
            const interval = setInterval(() => {
                glitchText.innerText = glitchText.innerText
                    .split("")
                    .map((letter, index) => {
                        if(index < iterations) return glitchText.dataset.value || "RIZZ // V.2077";
                        return "ABCDEFGHIJKLMNOPQRSTUVWXYZ"[Math.floor(Math.random() * 26)];
                    })
                    .join("");
                
                if(iterations >= 10) clearInterval(interval);
                iterations += 1/2; 
            }, 30);
        });
    </script>
